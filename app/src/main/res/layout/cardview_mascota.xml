<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/contacts_512"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                >
                <ImageButton
                    android:id="@+id/btnLike"
                    android:layout_width="@dimen/bone_size"
                    android:layout_height="@dimen/bone_size"
                    android:background="@drawable/dogbone"
                    />
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="@string/nombre"
                    android:textSize="@dimen/cvTextSize"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvfavs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_left"
                    android:text="@string/favs"
                    android:textSize="@dimen/cvTextSize"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/imgFavs"
                    android:layout_width="@dimen/bone_size"
                    android:layout_height="@dimen/bone_size"
                    android:src="@drawable/dogbonefilled"
                    android:scaleType="centerCrop"
                    android:layout_gravity="right"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>